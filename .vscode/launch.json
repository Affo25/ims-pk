{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: Node.js",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/next",
            "runtimeArgs": [
                "dev"
            ],
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Next.js: Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Next.js: Full Debug",
            "configurations": [
                "Next.js: Node.js",
                "Next.js: Chrome"
            ]
        }
    ]
}